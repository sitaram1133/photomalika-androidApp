<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewElevatedStyle"
        app:cardElevation="9dp"
        android:id="@+id/cardview5"
        app:cardCornerRadius="5dp"
        app:strokeColor="@color/purple_200"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true"
        android:theme="@style/ThemeOverlay.MaterialComponents.Light"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:translationZ="5dp"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:background="@drawable/calldonecard"
                    android:layout_marginHorizontal="9dp"
                    android:padding="5dp"
                    android:translationZ="1dp"
                    android:paddingHorizontal="3dp"
                    android:id="@+id/list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:drawablePadding="5dp"
                    android:paddingBottom="2dp"
                    android:textAlignment="inherit"
                    android:textSize="18sp"
                    android:text="Feed title"
                    android:textStyle="bold"
                    />
            </LinearLayout>


            <ImageView
                android:id="@+id/feedimgview"
                android:layout_gravity="center"
                android:src="@drawable/photoimg"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



            <LinearLayout
                android:background="@drawable/calldonecard"
                android:layout_gravity="bottom"
                android:gravity="center|bottom"
                android:weightSum="1"
                android:layout_marginTop="5dp"

                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button

                    android:background="@drawable/calldonecard"
                    android:id="@+id/likebtnid"
                    android:text="Like"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <CheckBox
                    android:background="@drawable/cardshape"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/commentsbtnid"
                    style="@style/Theme.Material3.Light"
                    android:theme="@style/Widget.Material3.CompoundButton.CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/sharebtnid"
                    android:text="Share"
                    android:textAllCaps="false"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>




    </com.google.android.material.card.MaterialCardView>

</LinearLayout>